<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/customToastTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/custom_toast_background"
        android:gravity="center"
        android:paddingBottom="@dimen/horizontalPadding"
        android:paddingEnd="@dimen/verticalPadding"
        android:paddingLeft="@dimen/verticalPadding"
        android:paddingRight="@dimen/verticalPadding"
        android:paddingStart="@dimen/verticalPadding"
        android:paddingTop="@dimen/horizontalPadding"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/mediumFontSize"
        android:textStyle="normal" />

    <View
        android:id="@+id/customToastUnderLineView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineViewHeight"
        android:background="@color/yellow" />

</LinearLayout>